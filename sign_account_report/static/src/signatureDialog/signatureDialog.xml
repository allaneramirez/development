<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="custom_report_signature.SignatureDialog" owl="1">
    <Dialog title="'Datos de Encabezado y Pie de PÃ¡gina'" size="'md'" contentClass="'o_signature_dialog'">
      <div class="modal-body">
        <div class="mb-3">
          <label>Imagen (archivo):</label>
          <input type="file" accept="image/*" class="form-control" t-on-change="onInputImagen"/>
          <t t-if="imagen">
            <img t-att-src="imagen" class="img-thumbnail mt-2" style="max-height: 100px;"/>
          </t>
        </div>

        <div class="mb-3">
          <label>Hecho por:</label>
          <input type="text" class="form-control" t-model="state.firma1_name" t-on-change="(ev) => this.onSearchUser(ev, 'firma1')"/>
        </div>

        <div class="mb-3">
          <label>Revisado por:</label>
          <input type="text" class="form-control" t-model="state.firma2_name" t-on-change="(ev) =>this. onSearchUser(ev, 'firma2')"/>
        </div>
      </div>

      <t t-set-slot="footer">
        <button class="btn btn-secondary" t-on-click="cancel">Cancelar</button>
        <button class="btn btn-primary" t-on-click="save">Guardar</button>
      </t>
    </Dialog>
  </t>
</templates>
