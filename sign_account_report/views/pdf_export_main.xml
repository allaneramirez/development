<odoo>
    <template id="custom_pdf_export_main_header" inherit_id="account_reports.pdf_export_main">
        <!-- Encabezado -->
       <xpath expr="//body/div//header" position="replace">
        <t t-if="options.get('report_id') == 20">
            <t t-call="sign_account_report.custom_report_header"/>
        </t>
        <t t-else="">
            <header>
                <div class="o_title">
                    <t t-if="report.filter_show_draft and options['all_entries']">[Draft]</t>
                    <t t-out="report_title"/>
                </div>
                <div class="row o_header_font">
                    <div class="col-8">
                        <t t-call="{{custom_templates.get('company_information', 'account_reports.company_information')}}"/>
                    </div>
                    <div class="col-4">
                        <t t-call="{{custom_templates.get('pdf_export_filters', 'account_reports.pdf_export_filters')}}"/>
                    </div>
                </div>
            </header>
        </t>
    </xpath>

        <!-- Firmas antes de las notas -->
        <xpath  expr="//table[@class='o_table']" position="after">
            <!-- Firmas -->
            <div class="row" style="margin-top: 300px; text-align: center;">
                <div class="col-4" t-if="firma1">
                    <div style="border-top: 1px solid #000; padding-top: 5px; font-size:12px">
                        Hecho por:
                        <t t-out="firma1" style="font-style:italic"/>
                    </div>
                    <span style="font-size:10px">Contabilidad</span>
                </div>

                <div class="col-4"></div>

                <div class="col-4" t-if="firma2">
                    <div style="border-top: 1px solid #000; padding-top: 5px; font-size:12px">
                        Revisado por:
                        <t t-out="firma2" style="font-style:italic"/>
                    </div>
                    <div style="font-size:10px">Contabilidad</div>
                </div>
            </div>

            <!-- Vo. Bo. centrado -->
            <div class="row" style="text-align: center; margin-top: 100px;">
                <div class="col-4 offset-4">
                    <div style="border-top: 1px solid #000; padding-top: 5px; font-size:12px">
                        Vo. Bo.
                    </div>
                </div>
            </div>
        </xpath>
    </template>


    <!--    HEADER PERZONALIZADO-->
    <!-- Tu header personalizado separado -->
    <template id="custom_report_header">
        <header style="background-color: white; padding: 10px 20px; display: flex; align-items: center; justify-content: center; position: relative; min-height: 80px;">
            <!-- Texto centrado -->
            <div style="text-align: center; width: 100%;">
                <div t-out="company_name" style="font-weight: bold; font-size: 15px;"/>
                <div t-out="report_name" style="font-weight: bold; font-size: 15px;"/>
            </div>

            <!-- Imagen -->
            <div style="position: absolute; top: 10px; right: 20px;">
                <img t-if="logo" t-att-src="logo" style="max-height: 60px; max-width: 160px;"/>
            </div>
        </header>
    </template>
</odoo>
