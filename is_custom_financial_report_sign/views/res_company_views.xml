<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sign_view_company_form" model="ir.ui.view">
        <field name="name">res.company.sign.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Firmas de Reportes">
                    <group string="Texto de Certificación">
                         <field name="certification_text" nolabel="1" placeholder="Escribe aquí la nota o certificación..."/>
                    </group>
                    <group col="3">
                        <group string="Firma 1">
                            <field name="name_1"/>
                            <field name="position_1"/>
                            <field name="sign_img_1" widget="image" class="oe_avatar img-fluid"/>
                        </group>
                        <group string="Firma 2">
                            <field name="name_2"/>
                            <field name="position_2"/>
                            <field name="sign_img_2" widget="image" class="oe_avatar img-fluid"/>
                        </group>
                        <group string="Firma 3">
                            <field name="name_3"/>
                            <field name="position_3"/>
                            <field name="sign_img_3" widget="image" class="oe_avatar img-fluid"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>