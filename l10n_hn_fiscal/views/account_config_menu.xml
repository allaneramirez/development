              </p>
            </field>
        </record>

        <menuitem
            id="menu_sequence_cai"
            name="Configuración de CAI"
            parent="l10n_hn_fiscal.menu_l10n_hn_fiscal_config_root"
            action="action_l10n_hn_cai"
