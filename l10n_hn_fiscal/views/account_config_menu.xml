        <record id="action_l10n_hn_cai" model="ir.actions.act_window">
            <field name="name">Configuración de CAI</field>
            <field name="res_model">l10n_hn.cai</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crea una nueva configuración de CAI
