<?xml version="1.0"?>
<odoo>
    <record id="inherited_view_sequence" model="ir.ui.view">
        <field name="name">Secuencia CAI</field>
        <field name="model">ir.sequence</field>
        <field name="inherit_id" ref="base.sequence_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='implementation']" position="after">
                    <field name="active_sar" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="has_confirmed_cai" invisible="1"/>
                    <field name="cai" attrs="{'invisible': [('active_sar', '=', False)]}" readonly="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="fiscal_document_type_id" 
                           attrs="{'invisible': [('active_sar', '=', False)], 'readonly': [('has_confirmed_cai', '=', True)]}" 
                           groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="range_start" attrs="{'invisible': [('active_sar', '=', False)]}" readonly="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="range_end" attrs="{'invisible': [('active_sar', '=', False)]}" readonly="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </xpath>
                <xpath expr="//field[@name='active']" position="after">
                    <field name="emition" attrs="{'invisible': [('active_sar', '=', False)]}" readonly="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="emition_limit" attrs="{'invisible': [('active_sar', '=', False)]}" readonly="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>