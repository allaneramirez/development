<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fiscal_document_type_view_tree" model="ir.ui.view">
            <field name="name">fiscal_document_type.tree</field>
            <field name="model">fiscal_document_type</field>
            <field name="arch" type="xml">
                <tree string="Tipos de Documento Fiscal">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="report_name"/>
                    <field name="internal_type"/>
                    <field name="country_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="fiscal_document_type_view_form" model="ir.ui.view">
            <field name="name">fiscal_document_type.form</field>
            <field name="model">fiscal_document_type</field>
            <field name="arch" type="xml">
                <form string="Tipo de Documento Fiscal">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active"
                                    type="object"
                                    class="oe_stat_button"
                                    attrs="{'invisible': [('id','=',False)]}">
                                <i class="fa" t-att-class="record.active ? 'fa-archive' : 'fa-inbox'"></i>
                                <span t-attf="">#{record.active ? 'Archive' : 'Unarchive'}</span>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Nombre del Tipo de Documento"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="report_name"/>
                                <field name="internal_type"/>
                            </group>
                            <group>
                                <field name="country_id"/>
                                <field name="sequence" groups="base.group_no_one"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for fiscal_document_type -->
        <record id="fiscal_document_type_action" model="ir.actions.act_window">
            <field name="name">Tipos de Documento</field>
            <field name="res_model">fiscal_document_type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cree un nuevo tipo de documento fiscal
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_fiscal_document_type"
                  name="Tipos de Documento"
                  parent="l10n_hn_fiscal.menu_l10n_hn_fiscal_config_root"
                  action="fiscal_document_type_action"
                  sequence="30"
                  groups="account.group_account_manager"/>

    </data>
</odoo>