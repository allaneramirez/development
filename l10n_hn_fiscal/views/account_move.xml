<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_customer_form_view" model="ir.ui.view">
            <field name="name">Datos fiscales</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                 <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="has_cai" invisible="1" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                    <field name="fiscal_document_type_id"
                           options="{'no_open': True, 'no_create': True}"
                           attrs="{'readonly': ['|', ('state', '=', 'posted'), ('has_cai', '=', True)]}"
                           groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="fiscal_hn" string="Datos Fiscales Honduras"
                          groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal">
                        <!-- Grupo de campos exonerados al principio -->
                        <group name="adquiriente_exonerado" string="Datos del adquiriente exonerado">
                            <field name="number_sag_hn"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="number_oce_hn"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="consecutive_number_oce_hn"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        
                        <group name="fiscal_hn_row" string="Datos Fiscales">
                            <group name="fiscal_hn_l">
                                <field name="cai"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                                <field name="range_start_str"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                                <field name="range_end_str"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                                <field name="emition"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                                <field name="emition_limit"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>

                            </group>
                            <group name="fiscal_hn_r">
                                <field name="l10n_hn_establecimiento_code"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                                <field name="l10n_hn_punto_emision_code"
                                       attrs="{'readonly': ['|',['state','=','posted'],['state','=','cancel']]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.move.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="fiscal_document_type_id" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </field>
                <xpath expr="//search" position="inside">
                    <filter string="Document Type" name="fiscal_document_type_id"
                            context="{'group_by':'fiscal_document_type_id'}"
                            groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_filter" model="ir.ui.view">
            <field name="name">account.move.filter</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="fiscal_document_type_id" groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </field>
                <xpath expr="//search" position="inside">
                    <filter string="Document Type" name="fiscal_document_type_id"
                            context="{'group_by':'fiscal_document_type_id'}"
                            groups="l10n_hn_fiscal.group_show_l10n_hn_fiscal"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>