<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_l10n_hn_cai_reset_wizard_form" model="ir.ui.view">
            <field name="name">l10n.hn.cai.reset.wizard.form</field>
            <field name="model">l10n_hn.cai.reset.wizard</field>
            <field name="arch" type="xml">
                <form string="Restablecer CAI a Borrador">
                    <p>
                        Para restablecer el CAI a borrador y poder editarlo, por favor,
                        introduce el hash de confirmación que se generó al confirmarlo.
                        Esta es una medida de seguridad para prevenir cambios no autorizados.
                    </p>
                    <group>
                        <field name="cai_id"/>
                        <field name="provided_hash"/>
                    </group>
                    <footer>
                        <button name="action_confirm_reset" string="Confirmar Restablecimiento" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
