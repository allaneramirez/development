<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_report_general_wizard_purchase" model="ir.ui.view">
        <field name="name">Reporte General Wizard Purchase</field>
        <field name="model">report.general.wizard.purchase</field>
        <field name="arch" type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="fecha_start"/>
                        </group>
                        <group>
                            <field name="fecha_end"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Imprimir" name="print_report_purchase" type="object" class="btn-success"/>
                    O
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_print_reporte_general_wizard_purchase" model="ir.actions.act_window">
        <field name="name">Imprimir Reporte compras</field>
        <field name="res_model">report.general.wizard.purchase</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_general_wizard_purchase"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_finance_report_general_compras" name="Libro de Compras" parent="account.menu_finance_reports"
              action="action_print_reporte_general_wizard_purchase"/>
</odoo>