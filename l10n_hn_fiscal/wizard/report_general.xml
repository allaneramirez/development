<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_report_general_wizard" model="ir.ui.view">
        <field name="name">Reporte General Wizard</field>
        <field name="model">report.general.wizard</field>
        <field name="arch" type='xml'>
            <form>
                <sheet>
                    <h4>Canal de ventas</h4>
                    <group>
                        <group>
                            <field name="team" string="Centro de costo"/>
                        </group>
                    </group>

                    <h4>Fechas de reporte</h4>
                    <group>
                        <group>
                            <field name="fecha_start"/>
                        </group>
                        <group>
                            <field name="fecha_end"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Imprimir" name="print_report" type="object" class="btn-success"/>
                    O
                    <button special="cancel" string="Cancelar"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_print_reporte_general_wizard" model="ir.actions.act_window">
        <field name="name">Libro de ventas</field>
        <field name="res_model">report.general.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_report_general_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_finance_report_general" name="Libro de ventas" parent="account.menu_finance_reports"
              action="action_print_reporte_general_wizard"/>
</odoo>
